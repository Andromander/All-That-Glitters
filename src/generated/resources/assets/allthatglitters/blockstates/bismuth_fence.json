{
  "multipart": [
    {
      "apply": {
        "model": "allthatglitters:block/bismuth_fence_post"
      }
    },
    {
      "apply": {
        "model": "allthatglitters:block/bismuth_fence_side",
        "uvlock": true
      },
      "when": {
        "north": "true"
      }
    },
    {
      "apply": {
        "model": "allthatglitters:block/bismuth_fence_side",
        "uvlock": true,
        "y": 180
      },
      "when": {
        "south": "true"
      }
    },
    {
      "apply": {
        "model": "allthatglitters:block/bismuth_fence_side",
        "uvlock": true,
        "y": 270
      },
      "when": {
        "west": "true"
      }
    },
    {
      "apply": {
        "model": "allthatglitters:block/bismuth_fence_side",
        "uvlock": true,
        "y": 90
      },
      "when": {
        "east": "true"
      }
    }
  ]
}